  
<h1>lists#index</h1>

<ul>
  <% @lists.each do |list| %>
    <li>
      <%= link_to list.name, list_path(list.id) %>
    </li>
<%= link_to 'delete this list', list_path(list.id), method: :delete, class: 'btn btn-secondary', data: { confirm: 'Are you sure you want to delete this list?' } %> 
  <% end %>
</ul>

<%= link_to 'New list', new_list_path, class:"btn btn-primary"   %>